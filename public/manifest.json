{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "1.0.0",
  "description": "Track browsing time, set goals, and visualize productivity trends",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png.jpg",
      "48": "icon48.png.jpg",
      "128": "icon128.png.jpg"
    }
  },
  "icons": {
    "16": "icon16.png.jpg",
    "48": "icon48.png.jpg",
    "128": "icon128.png.jpg"
  }
}